<MessageCard>:
    md_bg_color: self.theme_cls.bg_dark[:3] + [0.5]
    orientation: "vertical"
    adaptive_height: True
    size_hint_y: None
    MDBoxLayout:
        size_hint: None, None
        size: root.width, dp(40)
        padding: dp(5), dp(5), dp(15), dp(5)
        spacing: dp(10)
        MDLabel:
            text: root.sender
            adaptive_height: True
            pos_hint: {"center_y": 0.5}
        MDIconButton:
            icon: "content-copy"
            allow_selection: True
            size_hint_y: 1
            color: 0.7, 0.7, 1, 1
            icon_size: sp(17)
            pos_hint: {"center_y": 0.5}
            on_release: root.copy()

    MDSeparator:
    MDLabel:
        padding: dp(20)
        size_hint_x: 1
        markup: True
        text: root.content
        adaptive_height: True
        md_bg_color: self.theme_cls.bg_dark
