#:import EntryCard uix.EntryCard
#:import TagChip uix.TagChip

<EntriesScreen>:
    padding: dp(10)
    MDBoxLayout:
        id: toolbar
        orientation: "vertical"
        MDBoxLayout:
            md_bg_color: self.theme_cls.bg_light
            size_hint: 1, None
            padding: dp(10), dp(5), dp(10), 0
            height: dp(60)
            MDTextField:
                id: search_field
                icon_left: "magnify"
                pos_hint: {"top": 1}
                on_focus:
                    if not self.focus: root.load_entries()
            MDIconButton:
                id: filter_button
                icon: "filter"
                pos_hint: {"center_y": 0.5}
                theme_text_color: "Custom"
                icon_color: self.theme_cls.primary_color if root.show_filters else self.theme_cls.text_color
                on_release:
                    root.show_filters = not root.show_filters

        MDBoxLayout:
            md_bg_color: self.theme_cls.bg_light
            size_hint: 1, None
            height: dp(40)
            MDFlatButton:
                id: from_date_picker
                text: "From: " + str(root.from_date)
                on_release:
                    root.show_date_picker(False)
            MDFlatButton:
                id: to_date_picker
                text: "To: " + str(root.to_date.date())
                on_release:
                    root.show_date_picker()
            Widget:
                id: filter_tag_box_container_placeholder

        MDRecycleView:
            id: sv
            data: root.view_data
            key_viewclass: "viewclass"
            MDRecycleGridLayout:
                id: items_grid
                adaptive_height: True
                size_hint: 1, None
                cols: 1
                padding: dp(10), dp(10), dp(10), dp(50)
                spacing: dp(5)

    MDCard:
        id: switch_entry_button
        y: edit_card.top
        x: edit_card.x
        adaptive_size: True
        padding: dp(10)
        md_bg_color: self.theme_cls.bg_normal if not root.entry_edit else edit_card.md_bg_color
        radius: [dp(16), dp(16), -5, 0] if root.entry_edit else dp(16)
        on_press:
            root.entry_edit = True
            if edit_card.y < 0: root.animate_edit_card()
        MDLabel:
            text: "Entry"
            adaptive_size: True
            color: self.theme_cls.disabled_hint_text_color if not root.entry_edit else self.theme_cls.primary_dark


    MDCard:
        id: switch_post_button
        y: edit_card.top
        x: switch_entry_button.right + 1
        adaptive_size: True
        padding: dp(10)
        md_bg_color: self.theme_cls.bg_normal if root.entry_edit else edit_card.md_bg_color
        radius: [dp(16), dp(16), -5, -5] if not root.entry_edit else dp(16)
        on_press:
            root.entry_edit = False
            if edit_card.y < 0: root.animate_edit_card()
        MDLabel:
            text: "Post"
            adaptive_size: True
            color: self.theme_cls.disabled_hint_text_color if root.entry_edit else self.theme_cls.primary_dark


    MDCard: # Edit Card
        id: edit_card
        size_hint: 0.99, None
        height: edit_field.height + tag_box.height + dp(10)
        padding: dp(5)
        spacing: dp(5)
        pos_hint: {'center_x': 0.5}
        radius: [0, dp(16), 0, 0] if root.entry_edit else[dp(16), dp(16), 0, 0]
        md_bg_color: "#444444"
        orientation: "vertical"
#        y: 5
        MDBoxLayout:
            adaptive_height: True
            size_hint: 1, 0
            pos_hint: {'center_y': 0.5}
            MDTextField:
                id: edit_field
                mode: "rectangle"
                hint_text: "Edit"
                multiline: True
            MDBoxLayout:
                pos_hint: {'center_y': 0.45}
                adaptive_size: True
                orientation: "vertical" if edit_field.height > dp(80) else "horizontal"
                MDIconButton:
                    icon: "feather" if root.entry_edit else "send"
                    icon_size: dp(20)
                MDIconButton:
                    icon: "attachment-plus"
                    icon_size: dp(20)

        MDStackLayout:
            id: tag_box
            orientation: "lr-tb"
            adaptive_height: True
            size_hint: 1, None
            spacing: dp(5), dp(5)
            disabled: not root.entry_edit


    MDBoxLayout:
        id: filter_tag_box_container
        size_hint: None, None
        height: filter_tag_box_container_placeholder.height
        width: filter_tag_box_container_placeholder.width# if filter_tag_box.width > filter_tag_box_container_placeholder.width else filter_tag_box.width
        pos: filter_tag_box_container_placeholder.pos
        corner_radius: 0
        radius: 0, 0, 0, self.corner_radius
        md_bg_color: self.theme_cls.bg_light
        MDScrollView:
            id: scrollview
            size_hint: 1, 1
            scroll_x: 1
            MDStackLayout:
                id: filter_tag_box
                orientation: "rl-tb" if root.show_filters else "tb-rl"
                adaptive_height: root.show_filters
                adaptive_width: not root.show_filters
                width_sum: sum([c.width for c in self.children])
                size_hint_y: 1 if not root.show_filters else None
                size_hint_x: 1 if root.show_filters or self.width_sum < scrollview.width else None
                spacing: dp(10)
                padding: dp(10)
