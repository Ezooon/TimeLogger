#:import PostScreen screens.PostScreen
#:import AiToolScreen screens.AiToolScreen
#:import EntriesScreen screens.EntriesScreen
#:import PreferencesScreen screens.PreferencesScreen

<SM>:
    MDScreen:
        name: "home"
        MDBottomNavigation:
            id: bottom_nav
            use_text: False
            height: dp(30)
            EntriesScreen:
                id: entries_screen
                md_bg_color: self.theme_cls.opposite_bg_darkest[:3] + [0.5]
                icon: "history"
                text: "Entries"
                name: "entries_screen"
            PostScreen:
                id: posts_screen
                md_bg_color: self.theme_cls.opposite_bg_darkest[:3] + [0.5]
                icon: "post"
                text: "Posts"
                name: "posts_screen"
            AiToolScreen:
                id: ai_tool_screen
                md_bg_color: self.theme_cls.opposite_bg_darkest[:3] + [0.5]
                icon: "robot-excited-outline"
                text: "Ai Tool"
                name: "ai_tool_screen"
            PreferencesScreen:
                id: preferences_screen
                md_bg_color: self.theme_cls.opposite_bg_darkest[:3] + [0.2]
                icon: "account-box-outline"
                text: "Preferences"
                name: "preferences_screen"
